# Fun Project - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# API Keys
# ==========================================

# OpenAI API Key (for photo editor)
OPENAI_API_KEY="your_openai_api_key_here"

# Google Gemini API Key (for photo editor)
GEMINI_API_KEY="your_gemini_api_key_here"

# Weights & Biases API Key (for experiment tracking)
WANDB_API_KEY="your_wandb_api_key_here"

# Hugging Face Token (for model/dataset downloads)
HF_TOKEN="your_huggingface_token_here"

# ==========================================
# CUDA Configuration
# ==========================================

# Specify which GPU(s) to use (comma-separated for multiple GPUs)
CUDA_VISIBLE_DEVICES=0

# PyTorch CUDA memory allocation configuration
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True

# ==========================================
# Isaac Sim Configuration (if applicable)
# ==========================================

# Enable PhysX GPU simulation
PHYSX_GPU_FOUND=1
PHYSX_USE_GPU=1
GPU_FORCE_64BIT_PTR=1
CUDA_LAUNCH_BLOCKING=0

# Isaac Sim realtime ratio (0.1 = 10x slower than real-time)
ISAAC_SIM_REALTIME_RATIO=0.1

# PhysX GPU heap size in MB
PHYSX_GPU_HEAP_SIZE=64

# ==========================================
# LeRobot Configuration
# ==========================================

# Robot device ports (update based on your setup)
LEROBOT_LEFT_ARM_PORT=/dev/ttyACM1
LEROBOT_RIGHT_ARM_PORT=/dev/ttyACM0

# Robot type (so101_leader, so101_follower, etc.)
LEROBOT_ROBOT_TYPE=so101_leader

# ==========================================
# Project Paths
# ==========================================

# Dataset storage location
DATASET_ROOT=/home/yifeng/workspace/datasets

# Model storage location
MODEL_ROOT=/home/yifeng/workspace/models

# Output directory for results
OUTPUT_ROOT=/home/yifeng/workspace/outputs

# ==========================================
# Development Settings
# ==========================================

# Enable debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Number of worker threads for data loading
NUM_WORKERS=4

# ==========================================
# Network Configuration
# ==========================================

# Policy inference server configuration
POLICY_HOST=localhost
POLICY_PORT=8080
POLICY_TIMEOUT_MS=5000

# ==========================================
# Notes
# ==========================================

# 1. Never commit your .env file to version control
# 2. Keep this .env.example file updated when adding new environment variables
# 3. Some variables are optional and only needed for specific projects
# 4. Paths should be absolute, not relative
